# ===================================================================
# FinanceRAG-Pro 环境配置模板
# 根据部署环境选择相应的配置项
# ===================================================================

# ===================
# API密钥配置
# ===================
# OpenAI API密钥（通用LLM服务）
OPENAI_API_KEY=your_openai_api_key_here

# 硅基流动API密钥（用于Qwen3-8B，中国大陆用户推荐）
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# 魔搭API密钥（用于Qwen2.5-VL-72B）
MODELSCOPE_API_KEY=your_modelscope_api_key_here

# ===================
# 数据库配置
# ===================
# PostgreSQL配置（生产环境）
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=financerag
PG_USER=postgres
PG_PASSWORD=postgres123

# Redis配置（缓存和队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===================
# 对象存储配置
# ===================
# MinIO配置（文件存储）
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=finance-docs

# ===================
# 应用设置
# ===================
# 调试模式
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# 批处理配置
# ===================
# 批处理模式开关
BATCH_MODE=false

# 批处理大小
BATCH_SIZE=10

# ===================
# 模型设置
# ===================
# 是否使用本地模型（false=使用API调用）
USE_LOCAL_MODEL=false

# 模型缓存目录
MODEL_CACHE_DIR=./models

# ===================
# 断点续传配置
# ===================
# 检查点保存目录
CHECKPOINT_DIR=./checkpoints

# 启用断点续传
ENABLE_CHECKPOINT=true

# ===================
# 存储路径配置
# ===================
# 数据存储路径
DATA_PATH=./data

# 日志存储路径
LOG_PATH=./logs

# ===================
# Cloud Studio 轻量化配置
# ===================
# 轻量化模式（Cloud Studio推荐设置为true）
LITE_MODE=true

# 最大并发数（资源受限环境建议设置为4）
MAX_WORKERS=4

# 异步处理超时时间（秒）
ASYNC_TIMEOUT=30