# ===================================================================
# FinanceRAG-Pro 环境配置示例
# 新架构：按功能分类的API提供商配置
# ===================================================================

# ===================
# 文本理解API配置
# ===================
# 文本理解 - 默认提供商 (硅基流动)
TEXT_PRIMARY_URL=https://api.siliconflow.cn/v1
TEXT_PRIMARY_API_KEY=your_siliconflow_api_key_here
TEXT_PRIMARY_MODEL=Qwen/Qwen3-8B
TEXT_PRIMARY_RPM=1000

# 文本理解 - 备用提供商 (OpenAI格式)
TEXT_BACKUP_URL=https://api.openai.com/v1/chat/completions
TEXT_BACKUP_API_KEY=your_openai_api_key_here
TEXT_BACKUP_MODEL=gpt-3.5-turbo
TEXT_BACKUP_RPM=3500

# ===================
# 多模态理解API配置
# ===================
# 多模态理解 - 默认提供商 (魔搭)
VISION_PRIMARY_URL=https://api-inference.modelscope.cn/v1
VISION_PRIMARY_API_KEY=your_modelscope_api_key_here
VISION_PRIMARY_MODEL=qwen-vl-72b-instruct
VISION_PRIMARY_RPM=30

# 多模态理解 - 备用提供商 (OpenAI格式)
VISION_BACKUP_URL=https://api.openai.com/v1/chat/completions
VISION_BACKUP_API_KEY=your_openai_vision_api_key_here
VISION_BACKUP_MODEL=gpt-4-vision-preview
VISION_BACKUP_RPM=3500

# ===================
# LLM生成答案API配置
# ===================
# LLM生成 - 默认提供商 (AnyRouter)
GENERATE_PRIMARY_URL=https://anyrouter.top/v1/chat/completions
GENERATE_PRIMARY_API_KEY=your_anyrouter_api_key_here
GENERATE_PRIMARY_MODEL=gemini-2.5-pro
GENERATE_PRIMARY_RPM=1000

# LLM生成 - 备用提供商 (OpenAI格式)
GENERATE_BACKUP_URL=https://api.openai.com/v1/chat/completions
GENERATE_BACKUP_API_KEY=your_openai_generate_api_key_here
GENERATE_BACKUP_MODEL=gpt-4-turbo
GENERATE_BACKUP_RPM=3500

# ===================
# 应用设置
# ===================
# 调试模式
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# 批处理配置
# ===================
# 批处理模式开关
BATCH_MODE=false

# 批处理大小
BATCH_SIZE=10

# ===================
# 存储路径配置
# ===================
# 数据存储路径
DATA_PATH=./data

# 日志存储路径
LOG_PATH=./logs

# 模型缓存目录
MODEL_CACHE_DIR=./models

# ===================
# Cloud Studio 轻量化配置
# ===================
# 轻量化模式（Cloud Studio推荐设置为true）
LITE_MODE=true

# 最大并发数（资源受限环境建议设置为4）
MAX_WORKERS=4

# 异步处理超时时间（秒）
ASYNC_TIMEOUT=30